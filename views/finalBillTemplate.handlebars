        </thead>
        <tbody>
			<% for (const item of items) { %>
          <tr>
            <td><%= item.itemCount%></td>
            <td><%= item.productName %></td>
            <td>40590200</td>
            <td><%= item.cases %></td>
            <td><%= item.bottles %></td>
            <td><%= item.casePrice%></td>
            <td><%= item.bottlePrice%></td>
            <td><%= item.taxableAmount%></td>
            <td>30%</td>
            <td><%= item.CGST%></td>
            <td><%= item.SGST%></td>
            <td><%= item.itemPriceWithTax%></td>
          </tr>
		  <% } %>
        </tbody>
        <tfoot></tfoot>
      </table>


      <table class="hm-p table-bordered" style="width: 100%; margin-top: 30px">
        
        <tr style="background: #fcbd02">
          <th style="width: 50%;">Total Order Value</th>
          <td style="width: 50%; text-align: right; border-right: none">
            <b><%= totalOrderValue%></b>
          </td>
          <td colspan="5" style="border-left: none"></td>
        </tr>
      </table>

      <table style="width: 100%" cellspacing="0" cellspadding="0" border="0">
        <tr>
          <td>
            <h4 style="margin: 10px 0">
              Whether tax is Payable under reverse charge - No
            </h4>
